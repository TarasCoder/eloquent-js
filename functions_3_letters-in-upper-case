// function counting capital leters of desired letter

const countBs = (str, letter) =>{
    let count = 0;

    for (let i = 0; i < str.length; i++) {
        if(str[i].toLowerCase() === letter.toLowerCase()){
            if (str[i] === str[i].toUpperCase()) {
                count++;
            }  
        }
    }
    console.log(`In this string we have ${count} letters "${letter}" in UPPER case.`)
}

countBs("Some test B string to B test this B programB", "b")
